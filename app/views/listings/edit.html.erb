<%= javascript_include_tag 'listings.js' %>
<div class="container">
     <div class="row">
          <div class="col-md-12, col-md-offset-3">
                <%= image_tag("fastjax.jpg", class: "img-responsive") %>
                <br />
                <br />
          </div>
     </div>
     <div class="container">
     <div class="row">
          <div class="col-md-12">
              <%= bootstrap_form_for(@listings, html: { multipart: true }, layout: :horizontal, control_col: "col-sm-8") do |f| %>
                  <%= f.text_field :name %>
                  <%= f.file_field :image %>
                  <%= f.text_area :description %>
                  <%= f.select :category_id, Category.all.map { |f| [f.name, f.id]} %>
                  <%= f.select :subcategory_id, options_for_select([]) %>
                  <%= f.text_field :city %>
                  <%= f.text_field :state %>
                  <%= f.text_field :zipcode, class: "zip-width", maxlength: "5" %>
                  <%= f.text_field :sideoftown %>
                  <%= f.submit class: 'btn btn-primary' %>
                  <% end %>
          </div>
     </div>
     </div>
</div>
