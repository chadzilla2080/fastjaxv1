<div class="container">
     <div class="row">
          <div class="col-md-12, col-md-offset-3">
               <%= image_tag("fastjax.jpg", class: "img-responsive") %>
          </div>
          <div class="col-md-12">
                <%= link_to 'Home', root_path %> > 
                <br />
                <br />
          </div>
     </div>
     <div class="row">
          <div class="col-md-12 ">
              <h1><%= @listings.name %></h1>
              <br />
              <br />
              <%= image_tag @listings.image.url(:large) %>
              <br />
              <br />
              <%= @listings.description %>
              <br />
              <br />
              <%= @listings.city %>
              <br />
              <br />
              <%= @listings.state %>
              <br />
              <br />
              <%= @listings.zipcode %>
              <br />
              <br />
              <%= @listings.sideoftown %>
              <hr />
              <% if @listings.user = current_user %>
              <p><%= link_to 'edit', edit_listing_path %></p>
              <p><%= link_to 'delete', @listings, data: {confirm: "Are you sure you want to delete this listing?" }, method: :delete %></p>
              <% end %>
              <br />
              <b>Category:</b> <%= @listings.id %>
              <br />
              <br />
              <b>Created:</b> <%= time_ago_in_words(@listings.created_at) %>
          </div>
     </div>
</div>